<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Carl Stephens</Authors>
    <Company />
    <Product />
    <Description>A simple intra-app messenger. Supports subscribing to and sending custom messages without tight coupling</Description>
    <PackageProjectUrl>https://github.com/carlst99/IntraMessenger</PackageProjectUrl>
    <RepositoryUrl>https://github.com/carlst99/IntraMessenger</RepositoryUrl>
    <PackageTags>messaging loose-coupling</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Copyright>Copyright (c) 2019 Carl Stephens</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <NeutralLanguage>en-NZ</NeutralLanguage>
    <RepositoryType>Git</RepositoryType>
    <Version>2.0.0</Version>
    <PackageReleaseNotes>Added SendAsync, and support for async methods that return a Task

BREAKING CHANGES
- Removed Message, removed required properties from IMessage
- Removed Messenger modes</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
